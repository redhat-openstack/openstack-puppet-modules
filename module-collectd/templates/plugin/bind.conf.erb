<Plugin bind>
  URL "<%= @url %>"
  ParseTime <%= @parsetime %>
  OpCodes <%= @opcodes %>
  QTypes <%= @qtypes %>
  ServerStats <%= @serverstats %>
  ZoneMaintStats <%= @zonemaintstats %>
  ResolverStats <%= @resolverstats %>
  MemoryStats <%= @memorystats %>
<% @views.each do |view| -%>
  <View "<%= view['name'] %>">
<% if view['qtypes'] -%>
    QTypes <%= view['qtypes'] %>
<% end -%>
<% if view['resolverstats'] -%>
    ResolverStats <%= view['resolverstats'] %>
<% end -%>
<% if view['cacherrsets'] -%>
    CacheRRSets <%= view['cacherrsets'] %>
<% end -%>
<% if view['zones'] -%>
<% view['zones'].each do |zone| -%>
    Zone "<%= zone %>"
<% end -%>
<% end -%>
  </View>
<% end -%>
</Plugin>
