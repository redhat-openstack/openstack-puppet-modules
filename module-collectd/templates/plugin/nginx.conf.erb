<Plugin nginx>
  URL "<%= @url %>"
<% if @user -%>
  User "<%= @user %>"
<% end -%>
<% if @password -%>
  Password "<%= @password %>"
<% end -%>
<% if @verifypeer -%>
  VerifyPeer <%= @verifypeer %>
<% end -%>
<% if @verifyhost -%>
  VerifyHost <%= @verifyhost %>
<% end -%>
<% if @cacert -%>
  CACert "<%= @cacert %>"
<% end -%>
</Plugin>
