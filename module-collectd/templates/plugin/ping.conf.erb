<Plugin ping>
<% @hosts.each do |host| -%>
	Host "<%= host %>"
<% end -%>
<% if @interval %>
	Interval "<%= @interval %>"
<% end -%>
<% if @timeout %>
	Timeout "<%= @timeout %>"
<% end -%>
<% if @ttl %>
	TTL "<%= @ttl %>"
<% end -%>
<% if @source_address %>
	SourceAddress "<%= @source_address %>"
<% end -%>
<% if @device %>
	Device "<%= @device %>"
<% end -%>
<% if @max_missed %>
	MaxMissed "<%= @max_missed %>"
<% end -%>
</Plugin>
