{
    "name": "locp-cassandra",
    "version": "0.4.0",
    "author": "locp",
    "summary": "A Puppet module to install and manage Cassandra and DataStax Agent",
    "license": "Apache-2.0",
    "source": "https://github.com/locp/cassandra",
    "project_page": "https://github.com/locp/cassandra",
    "issues_url": "https://github.com/locp/cassandra/issues",
    "tags": [
        "cassandra",
        "datastax",
        "datastax-agent"
